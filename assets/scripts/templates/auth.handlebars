<div class="main">

  <div class="login-reg-panel">

    <div class="login-info-box">
      <h2>Have an account?</h2>
      <p>Log in with an existent account</p>
      <label id="label-register" for="log-reg-show" >Login</label>
      <input type="radio" name="active-log-panel" id="log-login-show"  checked="checked" value="1" class="selectable">
    </div>

    <div class="register-info-box">
      <h2>Don't have an account?</h2>
      <p> Create a new account</p>
      <label id="label-login" for="log-login-show" >Register</label>
      <input type="radio" name="active-log-panel" id="log-reg-show" value="2" class="selectable">
    </div>

    <div class="white-panel">
      <div class="register-show">
        <form id="sign-up">
        <legend>REGISTER</legend>
        <input type="text" name="credentials[email]" placeholder="Email">
        <input type="password" name="credentials[password]" placeholder="Password">
        <input type="password"  name="credentials[password_confirmation]" placeholder="Confirm Password">
        <input type="submit" value="Register">
      </form>
      </div>

      <div class="login-show show-log-panel">
        <form id="sign-in">
        <legend>LOGIN</legend>
        <input type="text" name="credentials[email]" placeholder="Email">
        <input type="password" name="credentials[password]" placeholder="Password">
        <input type="submit" value="Login">
        <form>
      </div>

      <div id='message'><h2></h2></div>

    </div>
  </div>
</div>
